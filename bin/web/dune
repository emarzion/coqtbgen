(library
  (name draw)
  (modules draw)
  (libraries query js_of_ocaml-tyxml)
  )

(executable
  (name index)
  (modules index)
  (modes byte)
  (preprocess (pps js_of_ocaml-ppx))
  (libraries draw extracted query js_of_ocaml js_of_ocaml-lwt js_of_ocaml-tyxml))

(rule
 (targets index.js)
 (action
  (run
   %{bin:js_of_ocaml}
   %{dep:index.bc}
   -o
   %{targets}
   --enable effects
   --opt=3
   --source-map
   --file
   %{dep:../gen/tb_w.json}:/static/tb_w.json
   --file
   %{dep:../gen/tb_b.json}:/static/tb_b.json)))

(executable
  (name play)
  (modules play)
  (modes byte)
  (preprocess (pps js_of_ocaml-ppx))
  (libraries draw extracted query js_of_ocaml js_of_ocaml-lwt js_of_ocaml-tyxml))

(rule
 (targets play.js)
 (action
  (run
   %{bin:js_of_ocaml}
   %{dep:play.bc}
   -o
   %{targets}
   --enable effects
   --opt=3
   --source-map
   --file
   %{dep:../gen/tb_w.json}:/static/tb_w.json
   --file
   %{dep:../gen/tb_b.json}:/static/tb_b.json)))

(rule
  (targets style.css)
  (deps style.raw.css)
  (action
    (run cp style.raw.css style.css)))

(rule
  (targets index.html)
  (deps index.raw.html)
  (action
    (run cp index.raw.html index.html)))

(rule
  (targets play.html)
  (deps play.raw.html)
  (action
    (run cp play.raw.html play.html)))
