(executable
  (name index)
  (modules draw index)
  (modes byte)
  (preprocess (pps js_of_ocaml-ppx))
  (libraries query js_of_ocaml js_of_ocaml-lwt js_of_ocaml-tyxml))

(rule
 (targets index.js)
 (action
  (run
   %{bin:js_of_ocaml}
   %{dep:index.bc}
   -o
   %{targets}
   --enable effects
   --opt=3
   --source-map
   --file
   %{dep:../gen/tb.txt}:/static/tb.txt)))

(rule
  (targets style.css)
  (deps style.raw.css)
  (action
    (run cp style.raw.css style.css)))

(rule
  (targets index.html)
  (deps index.raw.html)
  (action
    (run cp index.raw.html index.html)))
